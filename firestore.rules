rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users collection
    match /users/{userId} {
      // Anyone authenticated can read user profiles
      allow read: if request.auth != null;
      // Users can only write their own profile
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Threads collection
    match /threads/{threadId} {
      // Anyone authenticated can read threads
      allow read: if request.auth != null;
      // Anyone authenticated can create threads
      allow create: if request.auth != null;
      // Allow update if author OR if only updating specific fields (comments, reactions, etc.)
      // For now, allowing authenticated users to update is the simplest way to unblock comments
      allow update: if request.auth != null;
      allow delete: if request.auth != null && request.auth.uid == resource.data.authorId;
      
      // Messages subcollection - THIS IS THE FIX!
      match /messages/{messageId} {
        // Anyone authenticated can read messages in a thread
        allow read: if request.auth != null;
        // Anyone authenticated can create messages
        allow create: if request.auth != null;
        // Only message author can update/delete their own messages
        // EXCEPT for 'readBy' and 'reactions' fields which any auth user can update
        allow update: if request.auth != null && (
          request.auth.uid == resource.data.authorId ||
          request.resource.data.diff(resource.data).affectedKeys().hasOnly(['readBy', 'reactions'])
        );
        allow delete: if request.auth != null && 
          request.auth.uid == resource.data.authorId;
      }
      
      // Presence subcollection (for typing indicators - Phase 2)
      match /presence/{userId} {
        // Anyone authenticated can read presence
        allow read: if request.auth != null;
        // Users can only write their own presence
        allow write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Notifications collection structure: /notifications/{userId}/userNotifications/{notificationId}
    match /notifications/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      match /userNotifications/{notificationId} {
        // Users can read their own notifications
        allow read: if request.auth != null && request.auth.uid == userId;
        // Anyone can create a notification for a user
        allow create: if request.auth != null;
        // Users can update (mark as read) and delete their own notifications
        allow update, delete: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}
